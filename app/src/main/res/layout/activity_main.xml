<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="CalcularCuota"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/txtMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:autoText="false"
                android:background="#36938D"
                android:backgroundTint="#36938D"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="UPeU"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="MATRÍCULA"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="ALUMNO"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/extAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:inputType="text"
                android:textColor="#020202" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ESCUELA"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEscuela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:inputType="text" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="50dp" />


            <EditText
                android:id="@+id/editTextTextCarrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:inputType="text"
                android:text="Name" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GASTOS ADICIONALES"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxBiblioteca"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:checked="false"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="accion"
                android:text="Carnet Biblioteca" />

            <CheckBox
                android:id="@+id/checkBoxMedio"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:onClick="accion"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:text="Carnet Medio Pasaje" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÚMERO DE CUOTAS"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rbtn4"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:textSize="16sp"
                    android:text="4" />

                <RadioButton
                    android:id="@+id/rbtn5"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:textSize="16sp"
                    android:text="5" />

                <RadioButton
                    android:id="@+id/rbtn6"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:textSize="16sp"
                    android:text="6" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="COSTO CARRERA"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CostoCarrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:text="PENSIÓN"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Pension"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:text="GASTOS ADICIONALES"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/GastosAdicionales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="TOTAL PAGAR"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:inputType="number" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center">


                    <Button
                        android:id="@+id/button8"
                        android:layout_width="175dp"
                        android:layout_height="65dp"
                        android:backgroundTint="#252123"
                        android:text="CALCULAR"
                        android:textSize="16sp"
                        android:textColorHighlight="#4CAF50"
                        android:textColorLink="#4CAF50"
                        android:padding="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/button9"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp" />


                    <Button
                        android:id="@+id/button9"
                        android:layout_width="175dp"
                        android:layout_height="65dp"
                        android:backgroundTint="#A81E58E9"
                        android:textSize="16sp"
                        android:onClick="imprimir"
                        android:padding="8dp"
                        android:text="IMPRIMIR"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp" />

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>